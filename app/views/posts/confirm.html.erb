<div class="show-button-container">
  <div class="show-button">
    <%= link_to "投稿一覧に戻る", index_post_path, class: "show-button-text"%>
  </div>
</div>

<div class="post-form-body">
  <div class="post-form-container">
    <h2>確認画面</h2>

    <%# TODO:imageがデータベースに保存されない %>
    <div class="confirm-group">
      <div class="image-upload">
        <span class="form-label"> 画像 </span>
        <% if @post.image.attached? %>
          <img src="" alt="Image Preview" id="imageComfirmPreview" class="image-preview">
        <% else %>
          <%= image_tag 'sample_no_image.jpg' ,class: "image-preview" %>
        <% end %>
      </div>
    </div>

    <div class="confirm-group">
      <span class="form-label"> お祭り名 </span>
      <span class="form-control"> <%= @post.festival_name %> </span>
    </div>
        
    <div class="confirm-group">
      <span class="form-label"> イベント名 </span>
      <span class="form-control"> <%= @post.event_name %> </span>
    </div>
        
    <div class="confirm-group">
      <span class="form-label"> 募集人数 </span>
      <span class="confirm-control"> <%= @post.count %> 名 </span>
    </div>

    <div class="confirm-group">
      <span class="form-label"> カテゴリ </span>
      <span class="confirm-control"> <%= @post.category %> </span>
    </div>

    <div class="confirm-group">
      <span class="form-label"> 内容 </span>
      <span class="form-text-control"> <%= @post.content %> </span>
    </div>
        
    <div class="confirm-group">
      <span class="form-label"> 開催日 </span>
      <span class="confirm-control"> <%= @post.event_date.strftime("%Y年%m月%d日") %> </span>
    </div>
        
    <div class="confirm-group">
      <span class="form-label"> 開催場所 </span>
      <span class="form-control"> <%= @post.venue %> </span>
    </div>

    <h2>オークション期間・開始価格</h2>
        
    <div class="confirm-group">
      <span class="form-label"> 開始日時 </span>
      <span class="confirm-control"> <%= @post.start_time.strftime("%Y年%m月%d日%H時%M分") %> </span>
    </div>

    <div class="confirm-group">
      <span class="form-label"> 終了日時 </span>
      <span class="confirm-control"> <%= @post.end_time.strftime("%Y年%m月%d日%H時%M分") %> </span>
    </div>
        
    <div class="confirm-group">
      <span class="form-label"> 開始価格 </span>
      <span class="confirm-control"> <%= @post.start_price %> 円 </span>
    </div>
        
    <div class="button-group">
      <%= form_with(url: back_post_path, model: @post, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>
        <%= f.submit '入力画面に戻る' ,class: 'inquiries-button inquiries-button-text' %>
      <% end %>
      <%= form_with(url: complete_post_path, model: @post, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>
        <%= f.submit '投稿する' ,class: 'inquiries-orange-button inquiries-button-text' %>
      <% end %>
    </div>
  </div>
</div>