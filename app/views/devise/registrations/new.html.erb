<div class="device-container">
  <div class="form-container">
    <h2 class="h2">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :メールアドレス, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード, class: "label" %>
        <!-- % if @minimum_password_length %> -->
        <!-- <em>( %= @minimum_password_length %> characters minimum)</em> -->
        <!-- % end %><br /> -->
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用）, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-new_account-side-by-side-group">
        <div class="form-new_account-group">
          <%= f.label :last_name, "姓", class: 'form-label' %>
          <%= f.text_field :last_name, class: 'form-new_account-control'%>
        </div>

        <div class="form-new_account-group">
          <%= f.label :first_name, "名", class: 'form-label' %>
          <%= f.text_field :first_name, class: 'form-new_account-control'%>
        </div>
      </div>

      <!-- コメントアウト
      <div class="field">
        <%= f.label :last_name, "姓", class: "label" %>
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :first_name, "名", class: "label" %>
        <%= f.text_field :first_name %>
      </div>
      -->

      <div class="field">
        <%= f.label :display_name, "ユーザー名", class: "label" %>
        <%= f.text_field :display_name %>
      </div>

      <!--　コメントアウト
      <div class="field">
        <%= f.label :postcode, "郵便番号", class: "label" %>
        <%= f.text_field :postcode %>
      </div>

      <div class="field">
        <%= f.label :prefecture_code, "都道府県", class: "label" %>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>
      </div>

      <div class="field">
        <%= f.label :address_city, "市区町村", class: "label" %>
        <%= f.text_field :address_city %>
      </div>

      <div class="field">
        <%= f.label :address_street, "町域・番地", class: "label" %>
        <%= f.text_field :address_street %>
      </div>

      <div class="field">
        <%= f.label :address_building, "建物名", class: "label"  %>
        <%= f.text_field :address_building %>
      </div>

      <div class="field">
        <%= f.label :birthday, "生年月日", class: "label" %>
        <%= f.date_select :birthday, start_year: (Time.now.year - 100), end_year: (Time.now.year)%>
      </div>
      -->

      <div class="field">
        <%= f.hidden_field :contributor_code, value: 1 %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>

    <div class="link-container">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
